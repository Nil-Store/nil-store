{
  "name": "nil-website",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "wasm:build": "command -v wasm-pack >/dev/null 2>&1 || { echo \"wasm-pack not found\"; exit 1; }; cd ../nil_core && wasm-pack build --release --target web --out-dir ../nil-website/public/wasm --out-name nil_core",
    "predev": "npm run wasm:build",
    "prebuild": "npm run wasm:build",
    "dev": "vite",
    "build": "tsc && vite build",
    "ci:build": "export RUST_DIR=$PWD/.cache/rust && mkdir -p $RUST_DIR && export RUSTUP_HOME=$RUST_DIR && export CARGO_HOME=$RUST_DIR && export PATH=$RUST_DIR/bin:$PATH && if [ ! -f $RUST_DIR/bin/cargo ]; then echo 'Rust not found. Installing...' && curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y --no-modify-path --default-toolchain stable && rustup target add wasm32-unknown-unknown; else echo 'Rust found in cache!'; fi && npm run build",
    "test:unit": "tsx --test src/**/*.test.ts",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@noble/hashes": "^2.0.1",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-query": "^5.90.12",
    "bech32": "^2.0.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.25",
    "lucide-react": "^0.555.0",
    "marked": "^12.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.6",
    "recharts": "^3.5.1",
    "tailwind-merge": "^3.4.0",
    "viem": "^2.41.2",
    "wagmi": "^3.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^25.0.1",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.6",
    "tailwind-animate": "^0.2.10",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.0",
    "wasm-pack": "^0.13.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.53.3"
  }
}
